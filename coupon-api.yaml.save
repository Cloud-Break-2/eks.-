api:Version: apps/v1
kind: Deployment
metadata:
  labels:
    io.kompose.service: coupon-api
  name: coupon-api
spec:
  replicas: 1
  selector:
    matchLabels:
      io.kompose.service: coupon-api
  strategy: {}
  template:
    metadata:
      annotations:
      labels:
        io.kompose.service: coupon-api
    spec:
      containers:
        - env:
            - name: MYSQL_HOST
              value: coupon-mysql 
            - name: MYSQL_PORT
              value: "3306"
            - name: DATASOURCE_URL
              value: jdbc:mysql://coupon-mysql:3306/coupon
            - name: MYSQL_DATABASE
              value: coupon
            - name: MYSQL_USER
              value: abcd
            - name: MYSQL_PASSWORD
              value: "1234"
            - name: REDIS_HOST
              value: coupon-redis
            - name: REDIS_PORT
              value: "6379"
            - name: PROFILES_ACTIVE
              value: docker
          image: cloudbreak6th/coupon-api:v1.1
          name: coupon-api
          ports:
            - containerPort: 8080
              protocol: TCP
      restartPolicy: Always
---
apiVersion: v1
kind: Service
metadata:
  annotations:
  labels:
    io.kompose.service: coupon-api
  name: coupon-api
spec:
  selector:
   io.kompose.service: coupon-api
  ports:
    - name: coupon-api
      port: 8080
      targetPort: 8080
  selector:
    io.kompose.service: coupon-api

